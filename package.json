{
  "scripts": {
    "lint": "standard --fix preprocessor.js ./test/**/*.js",
    "tsc": "tsc",
    "play": "tsc && NODE_ENV=production node lib/playGame.js",
    "play-debug": "tsc && node --inspect-brk -r source-map-support/register ./lib/playGame.js",
    "play-dev": "tsc && node -r source-map-support/register ./lib/playGame.js",
    "prestart": "rm -rf ./lib/; rm ./coverage/coverage-gist*.json; rm -rf ./coverage/lcov-report/; tsc",
    "start": "NODE_ENV=production node -r source-map-support/register ./lib/runGames.js",
    "start-dev": "tsc && node -r source-map-support/register ./lib/runGames.js",
    "start-coverage": "tsc && istanbul cover -x '**/node_modules/**' ./lib/runGames.js",
    "start-debug": "tsc && node --inspect-brk lib/runGames.js",
    "start-debug-cli": "tsc && node inspect lib/runGames.js",
    "poststart": "npm run-script coverage && echo 'Generated coverage. Type open ./coverage/lcov-html/index.html to see it'",
    "coverage": "istanbul report --root ./coverage/ lcov",
    "test": "jest --coverage --updateSnapshot @*",
    "test-debug": "node --inspect-brk -r source-map-support/register $(npm bin)/jest -i --updateSnapshot $@",
    "watch": "jest --updateSnapshot --watch",
    "debug": "tsc; node --inspect-brk lib/runGames.js"
  },
  "dependencies": {
    "@types/ansi-styles": "^3.2.0",
    "@types/glob": "^5.0.35",
    "@types/lodash": "^4.14.108",
    "ansi-escapes": "^3.1.0",
    "ansi-styles": "^3.2.1",
    "chalk": "^2.4.1",
    "eventemitter2": "^5.0.1",
    "firstline": "^2.0.2",
    "glob": "^7.1.2",
    "inquirer": "^5.2.0",
    "inquirer-autocomplete-prompt": "^0.12.2",
    "jest": "^22.4.3",
    "lodash": "^4.17.10",
    "ohm-js": "^0.14.0",
    "pify": "^3.0.0",
    "source-map-support": "^0.5.6",
    "speaker": "^0.4.1",
    "supports-color": "^5.4.0"
  },
  "devDependencies": {
    "@types/inquirer": "0.0.41",
    "@types/pify": "^3.0.2",
    "@types/supports-color": "^5.3.0",
    "eslint-plugin-typescript": "^0.12.0",
    "http-server": "^0.11.1",
    "istanbul": "^0.4.5",
    "standard": "^11.0.1",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".ts": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/test/*.+(ts|js)"
    ]
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  }
}
